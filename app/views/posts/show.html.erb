<div class="body">
  <div class="row">
    <div class="col-md-7">

      <h1><%= @post.title %></h1>
      <h4>
        Created on: <%= formatted_date(@post.created_at) %> by <%= @post.user.full_name %>

        <div class="tags">
          Tags:
            <% @post.tag_ids.each do |p| %>
              <%= Tag.find(p).name %>,
            <% end %>
        </div>
      </h4>

      <h5> <%= @post.body %> </h5>

      <%= render "options" %>

      <div class="collaborators">
        <%= render "collaborators" %>
      </div>

      <div class="post-info">
        <%= render "info" %>
      </div>

      <div class="button-options">
        <%= render "buttons" %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="comment-form">
        <%= render "comments/form" %>
      </div>

      <div class="comments">
        <%= render "comments/post_comments" %>
      </div>
    </div>

  </div>
</div>
