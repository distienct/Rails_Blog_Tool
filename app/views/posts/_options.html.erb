<div class="post-options">
	<% if can?(:edit, @post) %>
		<h4>[Post Options]</h4>
		<%= link_to "Edit", edit_post_path(@post) %> ::
	<% end %>

	<% if can?(:destroy, @post) %>
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you wanto delete this?"} %>
	<% end %>
</div>
